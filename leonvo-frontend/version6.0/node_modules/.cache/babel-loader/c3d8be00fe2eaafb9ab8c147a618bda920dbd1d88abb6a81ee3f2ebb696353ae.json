{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from 'axios';\nimport apiConfig from '@/config/api.config.js';\nexport default {\n  name: 'ForgotPasswordView',\n  data() {\n    return {\n      form: {\n        tel: '',\n        smsCode: '',\n        newPassword: '',\n        confirmPassword: ''\n      },\n      errors: {\n        tel: '',\n        smsCode: '',\n        newPassword: '',\n        confirmPassword: ''\n      },\n      smsStatus: null,\n      countdown: 0,\n      canSend: true,\n      showResult: false,\n      isSubmitting: false,\n      countdownTimer: null\n    };\n  },\n  computed: {\n    isFormValid() {\n      return !this.errors.tel && !this.errors.smsCode && !this.errors.newPassword && !this.errors.confirmPassword && this.form.tel && this.form.smsCode && this.form.newPassword && this.form.confirmPassword;\n    }\n  },\n  methods: {\n    validateTel() {\n      const phoneRegex = /^1[3-9]\\d{9}$/;\n      if (!this.form.tel) {\n        this.errors.tel = 'ÊâãÊú∫Âè∑‰∏çËÉΩ‰∏∫Á©∫';\n      } else if (!phoneRegex.test(this.form.tel)) {\n        this.errors.tel = 'ËØ∑ËæìÂÖ•ÊúâÊïàÁöÑÊâãÊú∫Âè∑';\n      } else {\n        this.errors.tel = '';\n      }\n    },\n    validateNewPassword() {\n      if (!this.form.newPassword) {\n        this.errors.newPassword = 'Êñ∞ÂØÜÁ†Å‰∏çËÉΩ‰∏∫Á©∫';\n      } else if (this.form.newPassword.length < 6 || this.form.newPassword.length > 16) {\n        this.errors.newPassword = 'Êñ∞ÂØÜÁ†ÅÈïøÂ∫¶‰∏∫6-16‰Ωç';\n      } else {\n        this.errors.newPassword = '';\n      }\n    },\n    validateConfirmPassword() {\n      if (!this.form.confirmPassword) {\n        this.errors.confirmPassword = 'ËØ∑ÂÜçÊ¨°ËæìÂÖ•Êñ∞ÂØÜÁ†Å';\n      } else if (this.form.confirmPassword !== this.form.newPassword) {\n        this.errors.confirmPassword = '‰∏§Ê¨°ËæìÂÖ•ÁöÑÂØÜÁ†Å‰∏ç‰∏ÄËá¥';\n      } else {\n        this.errors.confirmPassword = '';\n      }\n    },\n    async checkTelExists() {\n      if (!this.form.tel || this.errors.tel) {\n        return false;\n      }\n      try {\n        const response = await axios.get(apiConfig.user.checkPhone, {\n          params: {\n            phone: this.form.tel\n          }\n        });\n\n        // ÊâæÂõûÂØÜÁ†ÅÊó∂ÔºåÊâãÊú∫Âè∑ÂøÖÈ°ªÂ≠òÂú®ÔºàÂ∑≤Ê≥®ÂÜåÔºâ\n        // checkPhone ËøîÂõû code=0 Ë°®Á§∫Â≠òÂú®Ôºåcode=1 Ë°®Á§∫‰∏çÂ≠òÂú®\n        if (response.data && response.data.code === 1) {\n          this.errors.tel = 'ËØ•ÊâãÊú∫Âè∑Êú™Ê≥®ÂÜå';\n          return false; // ‰∏çÂ≠òÂú®Ôºå‰∏çËÉΩÊâæÂõû\n        }\n        return true; // Â≠òÂú®ÔºåÂèØ‰ª•ÊâæÂõû\n      } catch (error) {\n        console.error('Ê£ÄÊü•ÊâãÊú∫Âè∑Â§±Ë¥•:', error);\n        return true;\n      }\n    },\n    async sendSmsCode() {\n      // È™åËØÅÊâãÊú∫Âè∑\n      this.validateTel();\n      if (this.errors.tel) {\n        return;\n      }\n\n      // Ê£ÄÊü•ÊâãÊú∫Âè∑ÊòØÂê¶Â∑≤Ê≥®ÂÜå\n      const exists = await this.checkTelExists();\n      if (!exists) {\n        return;\n      }\n      this.canSend = false;\n      this.smsStatus = null;\n      try {\n        const response = await axios.post(apiConfig.passwordReset.smsSendCode, {\n          phone: this.form.tel\n        }, {\n          headers: {\n            'Content-Type': 'application/json'\n          }\n        });\n        const data = response.data || {};\n        if (data.code === 1) {\n          this.smsStatus = {\n            success: true,\n            message: 'È™åËØÅÁ†ÅÂèëÈÄÅÊàêÂäü'\n          };\n          this.startCountdown(60);\n        } else {\n          this.smsStatus = {\n            success: false,\n            message: data.msg || 'È™åËØÅÁ†ÅÂèëÈÄÅÂ§±Ë¥•'\n          };\n          this.canSend = true;\n          if (data.data?.remaining) {\n            this.startCountdown(data.data.remaining);\n          }\n        }\n      } catch (error) {\n        console.error('ÂèëÈÄÅÈ™åËØÅÁ†ÅÂ§±Ë¥•:', error);\n        this.smsStatus = {\n          success: false,\n          message: 'ÂèëÈÄÅÈ™åËØÅÁ†ÅÂ§±Ë¥•ÔºåËØ∑Á®çÂêéÈáçËØï'\n        };\n        this.canSend = true;\n      }\n    },\n    startCountdown(seconds) {\n      this.countdown = seconds;\n      this.countdownTimer = setInterval(() => {\n        this.countdown--;\n        if (this.countdown <= 0) {\n          clearInterval(this.countdownTimer);\n          this.canSend = true;\n        }\n      }, 1000);\n    },\n    async handleResetPassword() {\n      this.validateTel();\n      this.validateNewPassword();\n      this.validateConfirmPassword();\n      if (!this.form.smsCode) {\n        this.errors.smsCode = 'ËØ∑ËæìÂÖ•È™åËØÅÁ†Å';\n        return;\n      }\n      if (!this.isFormValid) return;\n      this.isSubmitting = true;\n      try {\n        const resetRes = await axios.post(apiConfig.passwordReset.smsReset, {\n          phone: this.form.tel,\n          code: this.form.smsCode,\n          newPassword: this.form.newPassword,\n          confirmPassword: this.form.confirmPassword\n        }, {\n          headers: {\n            'Content-Type': 'application/json'\n          }\n        });\n        if (resetRes.data && resetRes.data.code === 1) {\n          this.showResult = true;\n        } else {\n          const msg = resetRes.data?.msg || 'ÈáçÁΩÆÂ§±Ë¥•ÔºåËØ∑Á®çÂêéÈáçËØï';\n          alert('ÈáçÁΩÆÂ§±Ë¥•: ' + msg);\n        }\n      } catch (error) {\n        console.error('ÊâæÂõûÂØÜÁ†ÅÂ§±Ë¥•:', error);\n        alert('ÈáçÁΩÆÂ§±Ë¥•ÔºåËØ∑Ê£ÄÊü•ÁΩëÁªúÊàñÁ®çÂêéÈáçËØï');\n      } finally {\n        this.isSubmitting = false;\n      }\n    },\n    goToLogin() {\n      this.$router.push('/login');\n    }\n  },\n  beforeUnmount() {\n    if (this.countdownTimer) {\n      clearInterval(this.countdownTimer);\n    }\n  }\n};","map":{"version":3,"names":["axios","apiConfig","name","data","form","tel","smsCode","newPassword","confirmPassword","errors","smsStatus","countdown","canSend","showResult","isSubmitting","countdownTimer","computed","isFormValid","methods","validateTel","phoneRegex","test","validateNewPassword","length","validateConfirmPass